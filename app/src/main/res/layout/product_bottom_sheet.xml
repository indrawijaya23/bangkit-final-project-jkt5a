<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bottom_sheet_best_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bottom_sheet_title_margin"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/bottom_sheet_title_size" />

    <TextView
        android:id="@+id/bottom_sheet_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bottom_sheet_title_margin"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/bottom_sheet_title_margin"
        android:layout_marginBottom="@dimen/bottom_sheet_title_margin"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="@dimen/bottom_sheet_title_size" />

</LinearLayout>
